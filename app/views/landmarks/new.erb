<h2>Create New Landmark</h2>

<!-- add content here -->

<form method="post" action="/landmarks">
  
  <lobel for="name">Name:</lobel><br>
  <input type="text" name="landmark[name]" id="landmark_name"><br>
  
  <label for="title">Titles</label><br>
  <% @titles.each do |title| %>
  <%= title.name %> <input type="checkbox" name="landmark[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>">
  <% end %>
  <br>
  Create New Title:
  <input type="text" name="title[name]" id="new_title"> <br>
  
  
  <label for="title">Landmarks</label><br>
  <% @landmarks.each do |landmark| %>
  <%= landmark.name %> <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>">
  <% end %>
  <br>
  Create New Landmark:
  <input type="text" name="landmark[name]" id="new_landmark"> <br>
  
  <input type="submit" value="Create New Figure">
  
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
